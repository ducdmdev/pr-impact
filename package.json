{
  "name": "pr-impact",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "turbo build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "turbo clean",
    "changeset": "changeset",
    "version-packages": "changeset version && tsx scripts/sync-plugin-versions.ts",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vitest": "^0.5.4",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  }
}
